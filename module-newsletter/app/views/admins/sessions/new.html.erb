<%= content_for(:title, t('.login')) %>

<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row m_top_10 col-md-4 mx-auto d-flex justify-content-center">
    <%= f.label :email, class: "required_colon" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control lower_case', placeholder: t('.p_email'), required: true, pattern: '[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$', maxlength: 64, minlength: 7, id: 'form_contact_email', 'data-purpose' => 'email', 'aria-invalid' => 'true', tabindex: 1 %>
  </div>

  <div class="row m_top_10 col-md-4 mx-auto d-flex justify-content-center">
    <%= f.label :password, class: "required_colon" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control lower_case', placeholder: t('.p_password'), required: true, pattern: '.{4,64}$', maxlength: 64, minlength: 4, id: 'form_contact_email', 'data-purpose' => 'email', 'aria-invalid' => 'true', tabindex: 2 %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="row m_top_10 col-md-4 mx-auto d-flex justify-content-center">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="row m_top_10 col-md-4 mx-auto d-flex justify-content-center">
    <%= f.submit "Log in", class: "btn btn-info btn-lg btn-block", tabindex: 8 %>
  </div>
<% end %>

